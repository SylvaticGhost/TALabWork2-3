@using TALab2
<h3>ListOfDestination</h3>

<div>
    <h2>List of closest destination to @Start</h2>
    <div>
        @foreach(var destination in Destinations)
        {
            <p>@destination.Way.ToStringLong(Graph)</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<Destination> Destinations { get; set; }
    [Parameter]
    public Graph Graph { get; set; }
    [Parameter]
    public char Start { get; set; }
    
}